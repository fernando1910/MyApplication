<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/item_border"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <ImageView
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:id="@+id/imgThumbnail"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="3dip"
        android:layout_marginRight="3dip"
        android:scaleType="centerInside">
    </ImageView>

    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_width="wrap_content"
        android:id="@+id/txtTitle"
        android:layout_toRightOf="@+id/imgThumbnail"
        android:scaleType="centerInside"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="10dip"
        android:layout_marginBottom="10dip"

        >
    </TextView>

    <LinearLayout

        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/imgThumbnail"
        android:layout_below="@+id/txtTitle"
        android:layout_marginTop="3dip"
        android:layout_marginBottom="3dip"
        android:layout_marginLeft="6dip"
        android:orientation="horizontal">
    <ImageView
        android:src="@drawable/ic_positivo"
        android:id="@+id/ivConvidados"
        android:layout_width="20dip"
        android:layout_height="20dip"
        android:padding="2dp" />

        <TextView
            android:id="@+id/tvConvidados"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp" />

        <ImageView
            android:src="@drawable/ic_comentario"
            android:id="@+id/ivComentarios"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:padding="2dp"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/tvComentarios"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp" />


    </LinearLayout>



</RelativeLayout>