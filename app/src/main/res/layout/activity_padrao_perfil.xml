<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context="project.myapplication.padraoPerfil">

    <ImageButton
        android:text="@string/selecionar_foto"
        android:id="@+id/ibPerfil"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:background="#FFFFFF"
        android:layout_gravity="center"
        android:contentDescription="Imagem de Perfil" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:padding="20dp"
            android:id="@+id/etNome"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Nome"
            android:inputType="textPersonName"
        />

        <ImageButton
            android:id="@+id/ibEditarNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:text="Button"
            android:onClick="onClickEditarNome"
            android:background="@null"
        />

</RelativeLayout>
</LinearLayout>
