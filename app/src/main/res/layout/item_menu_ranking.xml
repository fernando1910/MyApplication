<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/item_border"
    android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <ImageView
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:id="@+id/ivCapaEvento"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="3dip"
        android:layout_marginRight="3dip"
        android:scaleType="centerInside">
    </ImageView>

    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/tvTituloEvento"
        android:layout_toRightOf="@+id/ivCapaEvento"
        android:scaleType="centerInside"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="10dip"
        android:layout_marginBottom="5dip"

        android:text="[Titulo Evento]">
    </TextView>


    <RatingBar
        android:numStars="5"
        android:progressDrawable="@drawable/ratingbar"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/rbClassificacao"
        android:layout_toRightOf="@+id/ivCapaEvento"
        android:layout_below="@+id/tvTituloEvento"
        android:layout_marginTop="3dip"
        android:isIndicator="true"
        android:layout_marginLeft="6dip">
    </RatingBar>


</RelativeLayout>