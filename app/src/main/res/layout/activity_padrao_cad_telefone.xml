<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context="project.myapplication.padraoCadTelefone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

         <TextView android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec finibus pharetra diam in semper. Curabitur ac viverra lectus. Cras risus nunc, aliquet eu eleifend sit amet, lobortis non libero. Duis tortor massa, suscipit blandit dolor quis, convallis facilisis justo. Fusce consectetur odio eget ex molestie,"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        >

        <TextView
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:text="País"
        />

        <Spinner
        android:id="@+id/spPais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/sessao_pais"
        >

    </Spinner>

    </LinearLayout>
    <EditText
        android:padding="20dp"
        android:id="@+id/etTelefone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Telefone"
        android:inputType="phone"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >


        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btAvancar"
            android:text="Avançar"
            android:onClick="onClick_Avancar"
            android:background="#255E69"
            android:textColor="#D8E9EB"
            android:layout_gravity="bottom" />

    </LinearLayout>


</LinearLayout>
