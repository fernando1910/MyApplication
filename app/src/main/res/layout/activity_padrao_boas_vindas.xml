<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6E94A9"
    android:orientation="vertical"
    tools:context="project.myapplication.BoasVindas">


    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="5dp">


        <ImageView

            android:id="@+id/btnSelectPhoto"
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:src="@drawable/ic_padrao"

            />


    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="CLique em avançar se concorda com os termo de uso."
        android:textColor="#FFF" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center"

        >


        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="#255E69"
            android:onClick="onClick_Avancar"
            android:padding="5dp"
            android:text="Avançar"
            android:textColor="#D8E9EB" />

    </LinearLayout>
</LinearLayout>
