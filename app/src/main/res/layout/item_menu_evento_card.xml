<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="false">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/item_border">

        <ImageView
            android:id="@+id/ivEvento"
            android:layout_width="match_parent"
            android:layout_height="@dimen/imagem_capa_evento"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tvEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivEvento"
            android:padding="24dp"
            android:textSize="24sp" />

        <ImageView
            android:src="@drawable/people"
            android:id="@+id/ivConvidados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvEvento"
            android:layout_marginLeft="24dp"/>

        <TextView
            android:id="@+id/tvConvidados"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:text="0"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvEvento"
            android:layout_toRightOf="@+id/ivConvidados"
            android:layout_toEndOf="@+id/ivConvidados" />

        <ImageView
            android:src="@drawable/ic_comentarios_painel"
            android:id="@+id/ivComentarios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvEvento"
            android:layout_toRightOf="@+id/tvConvidados"
            android:layout_toEndOf="@+id/tvConvidados"
            android:layout_marginLeft="24dp"/>

        <TextView
            android:id="@+id/tvComentarios"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:text="0"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvEvento"
            android:layout_toRightOf="@+id/ivComentarios"
            android:layout_toEndOf="@+id/ivComentarios" />



        <View
            android:id="@+id/vw_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/ivConvidados"
            android:layout_marginTop="20dp" />


    </RelativeLayout>

</android.support.v7.widget.CardView>