<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="false"
    app:cardCornerRadius="3dp"
    >


<RelativeLayout
    android:id="@+id/relativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_border"

    >

    <ImageView
        android:layout_alignParentTop="true"
        android:id="@+id/ivEvento"
        android:layout_width="match_parent"
        android:layout_height="@dimen/imagem_capa_evento"
        android:scaleType="fitXY"
        android:src="@null" />

    <TextView
        android:layout_below="@+id/ivEvento"
        android:padding="24dp"
        android:id="@+id/tvEvento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:textSize="24sp" />

    <TextView

        android:layout_below="@+id/tvEvento"
        android:id="@+id/tvEndereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="16dp"
        android:textSize="12sp" />

    <View
        android:id="@+id/vw_divider"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/tvEvento"
        android:layout_below="@+id/tvEndereco"

        android:layout_width="match_parent"
        android:layout_height="0.8dp" />


</RelativeLayout>

</android.support.v7.widget.CardView>