<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item

        android:bottom="1dp"
        android:left="-2dp"
        android:right="-2dp"
        android:top="-2dp">
        <color android:color="@color/White"/>
        <shape android:shape="rectangle" >
            <stroke
                android:width="2dp"

                android:color="#ddd" />

            <solid android:color="@android:color/transparent" />

            <padding
                android:bottom="6dp"
                android:left="6dp"
                android:right="6dp"
                android:top="6dp" />
        </shape>
    </item>
    </layer-list>